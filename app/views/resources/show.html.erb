<div class="container">

    <h1 class="result-text"><%= @resource.title %></h1>
    
    <% if @resource.amount %>
        <h3 class="result-text">Amount: $<%= @resource.amount %></h3>
    <% end %>
    
    <% if @resource.source %>
        <h3 class="result-text">Department: <%= @resource.source %></h3>
    <% end %>
    
  
    
    <% if @resource.description %>
        <h3 class="result-text">Description: <%= @resource.description %></h3>
    <% end %>
    
    <%= link_to "Fund Website", "#{@resource.web}", class: "btn btn-primary", :target => "_blank"  %>
    
    
        <div class="float-right">
            <div class = "col-rg-20 col-md-20 col-sm-12 mb-3", align = "center">
                <div class="card" style="height: 275px;">
                    <div class="card-body">
                        <% if @resource.contact_person %>
                        <h3 class="result-text">Fund Owner: <%= @resource.contact_person %></h3>
                        <% end %>
                        
                        <% if @resource.email %>
                        <h3 class="result-text">Email: <%= @resource.email %></h3>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>

   
    
</div>
