<link rel="stylesheet" type="text/css" href="navbar.css">

<nav class="navbar navbar-expand-lg" id="<%= cookies[:theme] %>">
  <a id = "navbarIcon">
    <%= link_to root_path do %>
    <%= image_tag "Logo.png", class: "navbar-brand", alt: "The title \'campus funding resources\' to the left of a red Grinnell College logo"%>
    <% end %>
  </a>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <i class="fas fa-bars"></i>
  </button>
  
  <ul class="navbar-nav ml-auto">
  <% if cookies[:theme] == "light" %>
    <li class ="nav-item" role = "button"><%= link_to "Dark mode", root_path(:theme => "dark", :current_path => request.path)%></li>
  <% else %>
    <li class ="nav-item" role = "button"><%= link_to "Light mode", root_path(:theme => "light", :current_path => request.path)%></li>
  <% end %>
  </ul>
  
  <div class="collapse navbar-collapse sticky-top" id="navbarNav">
    <ul class="navbar-nav ml-auto">
      <li class="nav-item" role = "button">
        <%= link_to "Browse Funds", browse_path, class: "#{"active" if (current_page? browse_path)}"%>
      </li>
      <li class="nav-item" role = "button">
        <%= link_to "Add Funds", add_funds_path, class: "#{"active" if (current_page? add_funds_path)}"%>
      </li>
      <li class="nav-item" role = "button">
        <%= link_to "Contact", contact_path, class: "#{"active" if (current_page? contact_path)}"%>
      </li>
    </ul>
  </div>
</nav>